<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SISTEMAS OPERATIVOS!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.554"
            app:layout_constraintVertical_bias="0.168" android:id="@+id/textView"/>
    <Button
            android:id="@+id/ButtonSendFeedback"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:onClick="save"
            android:layout_width="fill_parent"
            tools:layout_editor_absoluteX="0dp" android:textColor="#FFFFFF" android:background="#3F82B5"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/EditTextName" android:layout_marginTop="20dp">
    </Button>
    <EditText
            android:id="@+id/EditTextName"
            android:layout_height="wrap_content"
            android:hint="Ingrese su nombre"
            android:inputType="textMultiLine"
            android:lines="5"
            android:layout_width="fill_parent"
            tools:layout_editor_absoluteX="0dp" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="52dp">
    </EditText>

</androidx.constraintlayout.widget.ConstraintLayout>